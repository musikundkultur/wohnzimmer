{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Rust minijinja crates",
      "groupName": "rust minijinja crates",
      "matchPackagePatterns": ["minijinja", "minijinja-autoreload"],
      "matchDatasources": ["cargo"],
      "versioning": "semver",
      "group": {
        "commitMessageTopic": "{{{groupName}}}"
      },
      "separateMinorPatch": true
    }
  ]
}
